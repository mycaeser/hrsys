<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.advancedc.hrsys.dao.Operation4ApplyDao">
	<select id="queryOperation4ApplyAll" resultType="com.advancedc.hrsys.entity.Operation4Apply">
		SELECT
		id,
		user_id,
		category_type_id,
		category_which,
		content,
		is_checked
		reason,
		created_time,
		edited_time
		FROM
		hr_operation4_apply
	</select>
	<select id="queryOperation4ApplyByTargetItem" resultType="com.advancedc.hrsys.entity.Operation4Apply">
		SELECT
		id,
		user_id,
		category_type_id,
		category_which,
		content,
		is_checked
		reason,
		created_time,
		edited_time
		FROM
		hr_operation4_apply
		WHERE
		id = #{targetItem.id}
	</select>
	<insert id="insertIntoOperation4ApplyByTargetItem" parameterType="com.advancedc.hrsys.entity.Operation4Apply"
		useGeneratedKeys="true">
		INSERT INTO
		hr_operation4_apply(user_id,category_type_id,
		category_which,content,is_checked,reason,created_time,
		edited_time)
		VALUES
		(#{targetItem.userId},#{targetItem.categoryTypeId},#{targetItem.categoryWhich},
		#{targetItem.content},#{targetItem.isChecked},#{targetItem.reason},
		#{targetItem.createdTime},#{targetItem.editedTime})
	</insert>
	<update id="updateOperation4ApplyByTargetItem" parameterType="com.advancedc.hrsys.entity.Operation4Apply"
		>
		UPDATE hr_operation4_apply
		<set>
			<if test="targetItem.content!=null">content=#{targetItem.content},</if>
			<if test="targetItem.isChecked!=null">is_checked=#{targetItem.isChecked},</if>
			<if test="targetItem.reason!=null">reason=#{targetItem.reason},</if>
			<if test="targetItem.createdTime!=null">created_time=#{targetItem.createdTime},</if>
			<if test="targetItem.editedTime!=null">edited_time=#{targetItem.editedTime}</if>
		</set>
		WHERE
		id = #{targetItem.id}
			
	</update>
	<delete id="deleteOperation4ApplyByTargetItem">
		DELETE FROM
		hr_operation4_apply
		WHERE
	    id = #{targetItem.id}
	</delete>
</mapper>
    